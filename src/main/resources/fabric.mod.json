{
  "schemaVersion": 1,
  "id": "tsbrewcraft",
  "version": "${version}",

  "name": "T's Brewcraft",
  "description": "A whimsical homebrewing mod for Fabric.",
  "authors": [
    "TrufflezMC"
  ],
  "contact": {
    "homepage": "https://github.com/trufflezmc/ts-brewcraft",
    "issues": "https://github.com/trufflezmc/ts-brewcraft/issues",
    "sources": "https://github.com/trufflezmc/ts-brewcraft"
  },

  "license": "GNU Lesser General Public License version 3 (LGPLv3)",
  "icon": "assets/tsbrewcraft/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.trufflez.tsbrewcraft.TsBrewcraft"
    ],
    "client": [
      "com.trufflez.tsbrewcraft.client.TsBrewcraftClient"
    ]
  },
  "mixins": [
    "tsbrewcraft.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": ">=1.18.2",
    "java": ">=17"
  }
}
